{
  "verbose": true,
  "rootDir": "..",
  "roots": ["<rootDir>/test"],
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testRegex": "\\.test\\.tsx?$",
  "moduleFileExtensions": ["ts", "tsx", "js"],
  "moduleDirectories": ["node_modules", "src"],
  "globals": {
    "ts-jest": {
      "tsConfigFile": "./node/tsconfig.jest.json",
      "enableTsDiagnostics": true
    }
  }
}
